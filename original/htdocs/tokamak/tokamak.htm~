          <script type="text/javascript" language="JavaScript">

function displayDate(){
        var now = new Date();
        var dayName = new Array("Sun", "Mon", "Tues", "Wed", "Thurs", "Fri", "Sat");
        var monthName = new Array("Jan.", "Feb.", "March", "April", "May", "June", "July", "Aug.", "Sept.", "Oct.", "Nov.", "Dec.");
        var year = now.getYear();
        var yearString = new String(year);
        var LongYear = (year < 100 ? "19" : "20" ) + yearString.substring(yearString.length - 2);
        var TodayIs = dayName[now.getDay()] + ", " + monthName[now.getMonth()] + " " + now.getDate() + ", " + LongYear;
        return(TodayIs);
}
// -->
